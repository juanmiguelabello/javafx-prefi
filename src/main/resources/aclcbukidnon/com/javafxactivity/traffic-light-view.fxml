<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aclcbukidnon.com.javafxactivity.controllers.TrafficLightController"
      alignment="CENTER"
      spacing="20"
      prefWidth="300"
      prefHeight="500"
      style="-fx-background-color: #ecf0f1;">

   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <!-- Traffic Lights (Circles) -->
   <VBox spacing="15" alignment="CENTER">
      <Circle fx:id="redLight" radius="40" fill="gray" stroke="black" strokeWidth="2"/>
      <Circle fx:id="yellowLight" radius="40" fill="gray" stroke="black" strokeWidth="2"/>
      <Circle fx:id="greenLight" radius="40" fill="gray" stroke="black" strokeWidth="2"/>
   </VBox>

   <!-- Control Buttons -->
   <HBox spacing="20" alignment="CENTER">
      <Button text="Start" onAction="#onStartClick" style="-fx-font-size: 16px; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
      <Button text="Stop" onAction="#onStopClick" style="-fx-font-size: 16px; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
   </HBox>

</VBox>
